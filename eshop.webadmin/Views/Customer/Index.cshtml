@model List<eshop.core.ViewModels.CustomerViewModel>
@{
    ViewData["Title"] = "Index";
}

<h5>Customer Index</h5>

<div id="customer-grid"></div>

<script>
    $(document).ready(function () {

        var customerDataSource = new kendo.data.DataSource({
            data: @Html.Raw(Json.Serialize(Model)),
            pageSize: 10
        });

        $("#customer-grid").kendoGrid({
            dataSource: customerDataSource,
            pageable:{
                pageSizes: true
            }
        });
        
    });
</script>